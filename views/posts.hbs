<link rel="stylesheet" href="../public/styles.css">

<body>
    <main>
        <h1>POSTS</h1>
        <div class="comments">
            {{#each posts}}
            <a href="/posts/{{this.id}}" class="comment"  >
                <h2>{{this.title}}</h2>
                <p>{{this.content}}</p>
                <p>{{formatDate this.createdAt}}</p>
                <p>username:{{author.username}}</p>
            </a>
            {{/each}}
        </div>
    </main>

</body>

</html>
