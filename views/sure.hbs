{{> post post }}

<h3 style="margin: auto;">Are you sure you want to delete this post?</h3>

<div class="flex" style="margin: 1em">
    <form action="/posts/{{post.id}}?_method=DELETE" method="POST">
        <button type="submit" class="destruct-button">Delete this post</button>
    </form>
    
    <a class="nav-component" href="/posts">Go back to all posts</a>
</div>
