<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="{{this.title}}" size="{{this.title.length}}">
   </div>
   <div>
    <label for="content">Content</label>
    <input type="text" name="content" value="{{this.content}}" size="{{this.content.length}}">
   </div>
   <div>
    <label for="published">Published</label>
    <input type="checkbox" name="published" {{#if this.published}}checked{{/if}}>
</div>